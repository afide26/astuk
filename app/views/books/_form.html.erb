<%= simple_form_for((@book), html:{class:'form-signin'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label:false, placeholder:"Book", input_html:{class:'form-control'} %>
    <%= f.input :author, label:false, placeholder:"Author", input_html:{class:'form-control'} %>
    <%= f.input :description, label:false, placeholder:"Description", input_html:{class:'form-control'} %>
    <%= f.input :price,label:false, placeholder:"Price", input_html:{class:'form-control'} %>
    <%= f.input :availability %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=>"btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
