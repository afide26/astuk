<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6 book-view">
    <%= image_tag 'book.jpg', class: 'img img-responsive' %>
    <br/>
    <div class="btn-group">
      <%= link_to 'Edit', edit_book_path(@book), class:"btn btn-primary btn-sm" %>
      <%= link_to 'Back', books_path, class:"btn btn-primary btn-sm" %>
    </div>
  </div>
  <div class="col-md-6">
    <h3 class="alert alert-success text-center"><%= @book.name %>by:<%= @book.author %></h3>
    <blockquote>
      <p><%= @book.description %></p>
    </blockquote>
    <h4 class="text-right alert alert-success">Price: $<%= @book.price.to_f/100 %>0</h4>
  </div>
</div>

